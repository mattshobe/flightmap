<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="SimulatorWarning">
    <item name="android:background">@color/SimulatorWarningBackground</item>
    <item name="android:textColor">@color/SimulatorWarningForeground</item>
    <item name="android:typeface">sans</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">5dp</item>
    <item name="android:layout_marginTop">60sp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>

  </style>
  <style name="TapcardOuterLayout">
    <item name="android:background">@color/TapcardBackground</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">vertical</item>
  </style>
  <style name="TapcardNameTable">
    <item name="android:stretchColumns">1</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="TapcardIcaoAndNameRow">
    <item name="android:gravity">left|center_vertical</item>
  </style>
  <style name="TapcardText">
    <item name="android:textColor">@color/TapcardHeaderText</item>
    <item name="android:typeface">sans</item>
    <item name="android:padding">5dp</item>
  </style>
  <style name="TapcardText.Icao">
    <item name="android:textSize">32sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowRadius">1.2</item>
    <item name="android:shadowDx">3</item>
    <item name="android:shadowDy">3</item>
    <item name="android:shadowColor">@color/DropShadow</item>
  </style>
  <style name="TapcardText.Name">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="TapcardNavigation">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">@color/TapcardNavigationBackground</item>
    <item name="android:padding">5dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>
  <style name="TapcardNavigationMap">
    <item name="android:layout_width">55dp</item>
    <item name="android:layout_height">55dp</item>
    <item name="android:layout_weight">0</item>
    <item name="android:padding">0dp</item>
  </style>
  <style name="TapcardNavigationText">
    <item name="android:textColor">@color/TapcardNavigationForeground</item>
    <item name="android:typeface">sans</item>
    <item name="android:textSize">22sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>
  <style name="TapcardComms">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">5dp</item>
  </style>
  <style name="TapcardRunwayLayout">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">5dp</item>
  </style>
  <style name="TapcardElevation">
    <item name="android:textColor">@color/TapcardForeground</item>
    <item name="android:typeface">sans</item>
    <item name="android:textSize">22sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">5dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="FillParent">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
  </style>
  <style name="FillWidth">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="WrapContent">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
</resources>
